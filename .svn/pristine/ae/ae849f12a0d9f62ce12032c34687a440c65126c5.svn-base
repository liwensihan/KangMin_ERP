package com.yidu.action.ErpFinance;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.yidu.model.ErpFinance;
import com.yidu.service.ErpFinance.ErpFinanceService;
import com.yidu.util.SsmMessage;



/**
 * @author zhangwei
 * 2017年10月23日
 */
@Controller
@RequestMapping("/ErpFinance")
public class ErpFinanceAction {

	@Resource
	private ErpFinanceService service;
	/**
	 * 增加类型
	 * @param record 类型对象
	 * @return 返回消息类
	 */
	@RequestMapping("insertSelectiveType")
	@ResponseBody
	public SsmMessage insertSelectiveFinance(ErpFinance record){
		SsmMessage mes = new SsmMessage();
		int rows = service.insertSelective(record);
		if(rows>-1){
			mes.setMes("增加成功");
			mes.setState(1);
		}else{
			mes.setMes("增加失败");
			mes.setState(0);
		}
		return mes;
	}
	/**
	 * 查询所有
	 * @return
	 */
	@RequestMapping("showListFinance")
	@ResponseBody
	public Map showListFinance(){
		List<ErpFinance> list = service.showLisFinance();
		Map<String, Object> map = new HashMap<String,Object>();
		map.put("code", "");
		map.put("msg", "");
		map.put("count", list.size());
		map.put("data", list);
		return map;
	}
	/**
	 * 删除
	 * @param financeId 类型id
	 * @return 返回消息类
	 */
	@RequestMapping("deleteFinance")
	@ResponseBody
	public SsmMessage deleteFinance(String financeId){
		SsmMessage mes = new SsmMessage();
		ErpFinance finance = new ErpFinance();
		finance.setFinanceId(financeId);
		finance.setIsva(1);
		int rows = service.updateByPrimaryKeySelective(finance);
		if(rows>-1){
			mes.setMes("删除成功");
			mes.setState(1);
		}else{
			mes.setMes("删除失败");
			mes.setState(0);
		}
		return mes;
	}
	/**
	 * 修改
	 * @param record 类型对象
	 * @return 返回消息类
	 */
	@RequestMapping("updateByPrimaryKeySelective")
	@ResponseBody
	public SsmMessage updateByPrimaryKeySelective(ErpFinance record){
		SsmMessage mes = new SsmMessage();
		if(record.getFinanceId()!=null){
			int rows = service.updateByPrimaryKeySelective(record);
			if(rows>-1){
				mes.setMes("修改成功");
				mes.setState(1);
			}else{
				mes.setMes("修改失败");
				mes.setState(0);
			}
		}else{
			mes.setMes("类型id无效");
			mes.setState(0);
		}
		return mes;
	}
	/**
	 * 模糊查询
	 * @param price 值
	 * @return 返回对象的map
	 */
	@RequestMapping("findDimFinance")
	@ResponseBody
	public Map findDimFinance(String pricer){
		Map<String, Object> map = new HashMap<String,Object>();
		map.put("pricer", pricer);
		List<ErpFinance> list = service.findDimFinance(map);
		map.put("code", "");
		map.put("msg", "");
		map.put("count", list.size());
		map.put("data", list);
		return map;
	}
}
