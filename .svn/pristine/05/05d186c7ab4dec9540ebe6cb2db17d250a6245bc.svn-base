package com.yidu.action.ErpExpend;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.yidu.model.ErpExpend;
import com.yidu.service.ErpExpend.ErpExpendService;
import com.yidu.util.SsmMessage;

/**
 * @author zhangwei
 * 2017年10月19日
 */
@Controller
@RequestMapping("/ErpExpend")
public class ErpExpendAction {
	@Resource
	private ErpExpendService service;
	/**
	 * 增加类型
	 * @param record 类型对象
	 * @return 返回信息类
	 */
	@RequestMapping("insertSelectiveExpend")
	@ResponseBody
	public SsmMessage insertSelectiveExpend(ErpExpend record){
		SsmMessage mes = new SsmMessage();
		int rows = service.insertSelective(record);
		if(rows>-1){
			mes.setMes("增加成功");
			mes.setState(1);
		}else{
			mes.setMes("增加失败");
			mes.setState(0);
		}
		return mes;
	}
	/**
	 * 查询所有
	 * @return
	 */
	@RequestMapping("showListExpend")
	@ResponseBody
	public Map showListExpend(){
		List<ErpExpend> list = service.showListExpend();
		Map<String, Object> map = new HashMap<String,Object>();
		map.put("code", "");
		map.put("msg", "");
		map.put("count", list.size());
		map.put("data", list);
		return map;
	}
	/**
	 * 删除
	 * @param expendId 类型id
	 * @return 返回信息类
	 */
	@RequestMapping("deleteExpend")
	@ResponseBody
	public SsmMessage deleteExpend(String expendId){
		SsmMessage mes = new SsmMessage();
		ErpExpend expend = new ErpExpend();
		expend.setExpendId(expendId);
		expend.setIsva(1);
		int rows = service.updateByPrimaryKeySelective(expend);
		if(rows>-1){
			mes.setMes("删除成功");
			mes.setState(1);
		}else{
			mes.setMes("删除失败");
			mes.setState(0);
		}
		return mes;
	}
	/**
	 * 修改
	 * @param record 类型对象
	 * @return 返回信息类
	 */
	@RequestMapping("updateByPrimaryKeySelective")
	@ResponseBody
	public SsmMessage updateByPrimaryKeySelective(ErpExpend record){
		SsmMessage mes = new SsmMessage();
		if(record.getExpendId()!=null){
			int rows = service.updateByPrimaryKeySelective(record);
			if(rows>-1){
				mes.setMes("修改成功");
				mes.setState(1);
			}else{
				mes.setMes("修改失败");
				mes.setState(0);
			}
		}else{
			mes.setMes("类型id无效");
			mes.setState(0);
		}
		return mes;
	}
	/**
	 * 模糊查询
	 * @param pricer 值
	 * @return 返回对象的map
	 */
	@RequestMapping("findDimExpend")
	@ResponseBody
	public Map findDimExpend(String pricer){
		Map<String, Object> map = new HashMap<String,Object>();
		map.put("pricer", pricer);
		List<ErpExpend> list = service.findDimType(map);
		map.put("code", "");
		map.put("msg", "");
		map.put("count", list.size());
		map.put("data", list);
		return map;
	}
}
