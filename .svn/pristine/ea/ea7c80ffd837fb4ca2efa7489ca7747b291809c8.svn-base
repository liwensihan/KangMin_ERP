package com.yidu.service.ErpIncome;

import java.util.Date;
import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import com.yidu.dao.ErpIncomeMapper;
import com.yidu.model.ErpIncome;
import com.yidu.util.Tools;

/**
 * @author zhangwei
 * 2017年10月19日
 */
@Service
public class ErpIncomeServiceImpl implements ErpIncomeService{

	@Resource
	private ErpIncomeMapper erpIncomeMapper;
	public int deleteByPrimaryKey(String incomeId) {
		
		return erpIncomeMapper.deleteByPrimaryKey(incomeId);
	}

	public int insert(ErpIncome record) {
		
		return erpIncomeMapper.insert(record);
	}

	public int insertSelective(ErpIncome record) {
		String data = erpIncomeMapper.incomeSerial(Tools.getDateStr(new Date()));//得到今天创建的最后一条数据
		record.setIncomeSerial(Tools.getSerial(data, "LX"));//类型编号
		record.setIsva(0);//是否有效
		Date date = new Date();
		record.setCreatetime(Tools.getDateStr(date));
		return erpIncomeMapper.insertSelective(record);
	}

	public ErpIncome selectByPrimaryKey(String incomeId) {
		
		return erpIncomeMapper.selectByPrimaryKey(incomeId);
	}

	public int updateByPrimaryKeySelective(ErpIncome record) {
		
		return erpIncomeMapper.updateByPrimaryKeySelective(record);
	}

	public int updateByPrimaryKey(ErpIncome record) {
		
		return erpIncomeMapper.updateByPrimaryKey(record);
	}

	@Override
	public List<ErpIncome> showLisIncome() {
		
		return erpIncomeMapper.findListIncome();
	}

	@Override
	public List<ErpIncome> findDimIncome(Map<String, Object> map) {
		
		return erpIncomeMapper.findDimIncome(map);
	}

}
