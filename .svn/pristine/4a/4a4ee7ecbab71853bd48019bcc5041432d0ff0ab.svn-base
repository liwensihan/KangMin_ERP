package com.yidu.service.ErpExpend;

import java.util.Date;
import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import com.yidu.dao.ErpExpendMapper;
import com.yidu.model.ErpExpend;
import com.yidu.util.Tools;

/**
 * @author zhangwei
 * 2017年10月19日
 */
@Service
public class ErpExpendServiceImpl implements ErpExpendService{

	@Resource
	private ErpExpendMapper erpExpendMapper;
	
	public int deleteByPrimaryKey(String expendId) {
		
		return erpExpendMapper.deleteByPrimaryKey(expendId);
	}

	public int insert(ErpExpend record) {
		
		return erpExpendMapper.insert(record);
	}

	public int insertSelective(ErpExpend record) {
		String data = erpExpendMapper.expendSerial(Tools.getDateStr(new Date()));//得到今天创建的最后一条数据
		record.setExpendSerial(Tools.getSerial(data, "LX"));//类型编号
		record.setIsva(0);//是否有效
		Date date = new Date();
		record.setCreatetime(Tools.getDateStr(date));
		return erpExpendMapper.insertSelective(record);
	}

	public ErpExpend selectByPrimaryKey(String expendId) {
		
		return erpExpendMapper.selectByPrimaryKey(expendId);
	}

	public int updateByPrimaryKeySelective(ErpExpend record) {
		
		return erpExpendMapper.updateByPrimaryKeySelective(record);
	}

	public int updateByPrimaryKey(ErpExpend record) {
		
		return erpExpendMapper.updateByPrimaryKey(record);
	}

	
	public List<ErpExpend> showListExpend() {
		
		return erpExpendMapper.findListExpend();
	}

	
	public List<ErpExpend> findDimType(Map<String, Object> map) {
		
		return erpExpendMapper.findDimExpend(map);
	}

}
