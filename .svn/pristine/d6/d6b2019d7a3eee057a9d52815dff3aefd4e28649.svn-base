package com.yidu.action.ErpApplyasset;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.yidu.model.ErpApplyasset;
import com.yidu.service.ErpApplyasset.ErpApplyassetService;
import com.yidu.util.SsmMessage;

/**
 * @author zhangwei
 * 2017年10月19日
 */
@Controller
@RequestMapping("/ErpApplyasset")
public class ErpApplyassetAction {

	@Resource
	private ErpApplyassetService service;
	/**
	 * 增加类型
	 * @param record 类型对象
	 * @return 返回信息类
	 */
	@RequestMapping("insertSelectiveApplyasset")
	@ResponseBody
	public SsmMessage insertSelectiveApplyasset(ErpApplyasset record){
		SsmMessage mes = new SsmMessage();
		int rows = service.insertSelective(record);
		if(rows>-1){
			mes.setMes("增加成功");
			mes.setState(1);
		}else{
			mes.setMes("增加失败");
			mes.setState(0);
		}
		return mes;
	}
	/**
	 * 查询所有
	 * @return
	 */
	@RequestMapping("showListApplyasset")
	@ResponseBody
	public Map showListApplyasset(){
		List<ErpApplyasset> list = service.showLisApplyasset();
		Map<String, Object> map = new HashMap<String,Object>();
		map.put("code", "");
		map.put("msg", "");
		map.put("count", list.size());
		map.put("data", list);
		return map;
	}
	/**
	 * 删除
	 * @param appassId 类型id
	 * @return返回信息类
	 */
	@RequestMapping("deleteApplyasset")
	@ResponseBody
	public SsmMessage deleteApplyasset(String appassId){
		SsmMessage mes = new SsmMessage();
		ErpApplyasset applyasset = new ErpApplyasset();
		applyasset.setAppassId(appassId);
		applyasset.setIsva(1);
		int rows = service.updateByPrimaryKeySelective(applyasset);
		if(rows>-1){
			mes.setMes("删除成功");
			mes.setState(1);
		}else{
			mes.setMes("删除失败");
			mes.setState(0);
		}
		return mes;
	}
	/**
	 * 修改
	 * @param record 类型对象
	 * @return 返回信息类
	 */
	@RequestMapping("updateByPrimaryKeySelective")
	@ResponseBody
	public SsmMessage updateByPrimaryKeySelective(ErpApplyasset record){
		SsmMessage mes = new SsmMessage();
		if(record.getAppassId()!=null){
			int rows = service.updateByPrimaryKeySelective(record);
			if(rows>-1){
				mes.setMes("修改成功");
				mes.setState(1);
			}else{
				mes.setMes("修改失败");
				mes.setState(0);
			}
		}else{
			mes.setMes("类型id无效");
			mes.setState(0);
		}
		return mes;
	}
	/**
	 * 模糊查询
	 * @param pricer 值
	 * @return 返回对象的map
	 */
	@RequestMapping("findDimApplyasset")
	@ResponseBody
	public Map findDimApplyasset(String pricer){
		Map<String, Object> map = new HashMap<String,Object>();
		map.put("pricer", pricer);
		List<ErpApplyasset> list = service.findDimApplyasset(map);
		map.put("code", "");
		map.put("msg", "");
		map.put("count", list.size());
		map.put("data", list);
		return map;
	}
}
